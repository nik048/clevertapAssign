[
    {
      "name": "wordpress-container",
      "image": "nik048/wordpress-task:v1.0",
      "entryPoint": [],
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "cpu": 256,
      "memory": 512,
      "networkMode": "awsvpc",
      "mountPoints" : [
        {
          "sourceVolume"  : "wp-upload",
          "containerPath" : "/var/www/html/wp-content/uploads",
          "readOnly"      : false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "wordpress-logs",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "wordpress"
        }
      }
    }
  ]
